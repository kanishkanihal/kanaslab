<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Acme\AuthBundle\Entity\UserRepository" name="Acme\AuthBundle\Entity\User">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="username" type="string" column="username" length="32"/>
    <field name="password" type="string" column="password" length="1024"/>
    <field name="email" type="string" column="email" length="64"/>
    <field name="firstName" type="string" column="first_name" length="32"/>
    <field name="lastName" type="string" column="last_name" length="32"/>
    <field name="address1" type="string" column="address1" length="64"/>
    <field name="address2" type="string" column="address2" length="64"/>
    <field name="nic" type="string" column="nic" length="16"/>
    <field name="dob" type="datetime" column="dob"/>
  </entity>
</doctrine-mapping>
